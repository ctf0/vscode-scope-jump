{
    "name": "scope-jump",
    "displayName": "Scope Jump",
    "description": "jump to scope end/start via hover",
    "version": "0.0.2",
    "publisher": "ctf0",
    "author": "ctf0",
    "repository": "https://github.com/ctf0/vscode-scope-jump",
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/main",
    "contributes": {
        "commands": [],
        "menus": {
            "commandPalette": []
        },
        "configuration": {
            "title": "Scope Jump",
            "properties": {
                "scopeJump.linkText": {
                    "type": "object",
                    "default": {
                        "jump": {
                            "text": "Jump ",
                            "icon": {
                                "up": "$(chevron-up)",
                                "down": "$(chevron-down)"
                            }
                        },
                        "select": {
                            "text": "Select ",
                            "icon": "$(bracket-dot)"
                        }
                    },
                    "description": "hover text & icons"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --pure:console.log --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "watch": "npm run esbuild"
    },
    "devDependencies": {
        "@types/node": "^18.16.3",
        "@types/vscode": "^1.68.0",
        "esbuild": "^0.17.18",
        "typescript": "^5.0.4"
    },
    "dependencies": {}
}
